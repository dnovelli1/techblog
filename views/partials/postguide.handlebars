<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <a href="/post/{{id}}">{{title}}</a>
                <p class="creator">Made by: {{user.username}}</p>
                <p>Created at: {{post.created_at}}</p>
            </div>
            <div class="card-action">
                <p>{{body}}</p>
            </div>
        </div>
    </div>
</div>
