{{#each posts as |post|}}
<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <a href="/post/{{post.id}}">{{post.title}}</a>
                <p class="creator">Made by: {{user.username}}</p>
                <p>Created at: {{format_date post.createdAt}}</p>
            </div>
            <div class="card-action">
                <p>{{post.body}}</p>
            </div>
        </div>
    </div>
</div>
{{/each}}